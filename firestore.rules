rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * STUDENTHUB AI SECURITY RULES
     * 
     * Core Philosophy: 
     * This ruleset enforces a strict user-ownership model combined with role-based access for administrators. 
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Simplified admin check to avoid recursion in rules.
    // Relies on a dedicated 'roles_admin' collection for authorization independence.
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    function isUnchanged(field) {
      return request.resource.data[field] == resource.data[field];
    }

    // --- Collection Rules ---

    match /userProfiles/{userId} {
      // Users can always read their own profile. Admins can read all.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource != null && isUnchanged('id');
      allow delete: if isOwner(userId) && resource != null;

      match /chatSessions/{chatSessionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isOwner(userId) && resource != null && isUnchanged('userId');
        allow delete: if isOwner(userId) && resource != null;

        match /chatMessages/{chatMessageId} {
          allow get, list: if isOwner(userId);
          allow create: if isOwner(userId);
          allow update: if isOwner(userId);
          allow delete: if isOwner(userId);
        }
      }

      match /resumes/{resumeId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.studentId == userId;
        allow update: if isOwner(userId) && resource != null && isUnchanged('studentId');
        allow delete: if isOwner(userId) && resource != null;

        match /educationEntries/{entryId} {
          allow read, write: if isOwner(userId);
        }
        match /experienceEntries/{entryId} {
          allow read, write: if isOwner(userId);
        }
        match /projectEntries/{entryId} {
          allow read, write: if isOwner(userId);
        }
      }
    }

    match /roles_admin/{adminUid} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    match /leaveApplications/{leaveApplicationId} {
      // Allow read if user is admin or the student who owns the request
      allow get: if isAdmin() || (isSignedIn() && resource.data.studentId == request.auth.uid);
      
      // Enforce QAP: Non-admins MUST filter by studentId
      allow list: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.studentId);
      
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      
      allow update: if isAdmin() || (isSignedIn() && resource.data.studentId == request.auth.uid && resource.data.status == 'pending' && isUnchanged('studentId'));
      
      allow delete: if isAdmin() || (isSignedIn() && resource.data.studentId == request.auth.uid && resource.data.status == 'pending');
    }

    match /skills/{skillId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}